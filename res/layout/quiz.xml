<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B4513" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/ChordPattern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/chordpattern" />

    <ImageView
        android:id="@+id/quiz_finger1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/RelativeLayout2"
        android:layout_marginLeft="22dp"
        android:src="@drawable/finger1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/quiz_b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/answerbutton"
                android:text="Button"
                android:layout_margin="10dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/quiz_b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/answerbutton"
                android:text="Button"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="676.37" >

            <Button
                android:id="@+id/quiz_b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/answerbutton"
                android:text="Button"
                android:layout_weight="1" />

            <Button
                android:id="@+id/quiz_b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/answerbutton"
                android:text="Button"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>