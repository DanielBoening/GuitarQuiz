<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7E7" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/quiz_b1"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/answerbutton"
                android:onClick="onClick"
                android:text="1" />

            <Button
                android:id="@+id/quiz_b2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/answerbutton"
                android:onClick="onClick"
                android:text="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/quiz_b3"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/answerbutton"
                android:onClick="onClick"
                android:text="3" />

            <Button
                android:id="@+id/quiz_b4"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/answerbutton"
                android:onClick="onClick"
                android:text="4" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Klicke einen Button!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/menuL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menuleft"
            android:src="@drawable/menuleft"
            android:text="MENU" />

        <Button
            android:id="@+id/menuR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menuright"
            android:src="@drawable/menuright"
            android:text="Chord" />

        <Button
            android:id="@+id/menuM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menumid"
            android:src="@drawable/menumid"
            android:text="Tab" />
    </LinearLayout>

   	<RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ChordPattern"
            android:layout_width="285dp"
            android:layout_height="135dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="26dp"
            android:src="@drawable/chord" />

        <ImageView
            android:id="@+id/quiz_finger4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finger"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/quiz_finger2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finger"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/quiz_finger1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finger"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/quiz_finger3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/finger"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Quiz_IsPlayed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ChordPattern"
            android:layout_marginTop="3dp"
            android:text="X"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        
            <TextView
            android:id="@+id/Quiz_IsPlayed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ChordPattern"
            android:layout_marginTop="30dp"
            android:text="X"
            android:textAppearance="?android:attr/textAppearanceMedium" />
                
                
           <TextView
            android:id="@+id/Quiz_IsPlayed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ChordPattern"
            android:layout_marginTop="56dp"
            android:text="X"
            android:textAppearance="?android:attr/textAppearanceMedium" />
           
           
             <TextView
            android:id="@+id/Quiz_IsPlayed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ChordPattern"
            android:layout_marginTop="83dp"
            android:text="X"
            android:textAppearance="?android:attr/textAppearanceMedium" />
             
             <TextView
            android:id="@+id/Quiz_IsPlayed5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ChordPattern"
            android:layout_marginTop="108dp"
            android:text="X"
            android:textAppearance="?android:attr/textAppearanceMedium" />
             
             
            <TextView
            android:id="@+id/Quiz_IsPlayed6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ChordPattern"
            android:layout_marginTop="134dp"
            android:text="X"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
                

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/QuizProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>